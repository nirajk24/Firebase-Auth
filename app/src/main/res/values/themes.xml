<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Repsoft" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:colorPrimary">@color/accent</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/accent</item>
    </style>

    <style name="Theme.Repsoft" parent="Base.Theme.Repsoft" />


    <style name="text_500">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="color"></item>
    </style>


    <style name="image_tint">
        <item name="android:tint">@color/black</item>
    </style>


    <style name="LoginTextInputOuterFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>

    </style>


    <style name="LoginTextInputInnerFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="bottom_navigation_bar">
        <item name="itemIconTint">@color/accent</item>
        <item name="itemTextColor">@color/accent</item>
        <item name="itemRippleColor">@color/background_light</item>
        <item name="backgroundTint">@color/white</item>
    </style>
</resources>